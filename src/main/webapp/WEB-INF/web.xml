<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- context param -->
    <context-param>
        <param-name>양파</param-name>
        <param-value>1000</param-value>

        <param-name>계란</param-name>
        <param-value>2000</param-value>

        <param-name>파</param-name>
        <param-value>500</param-value>

        <param-name>사과</param-name>
        <param-value>2000</param-value>
    </context-param>

    <!-- filter -->

    <filter>
        <filter-name>loginCheckFilter</filter-name>
        <filter-class>com.nhnacademy.nhnmart.filter.LoginCheckFilter</filter-class>
        <init-param>
            <param-name>exclude-urls</param-name>
            <param-value>
                /login.jsp
                /login
                /index.jsp     <!-- welcome page -->
                /               <!-- root -->
            </param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>loginCheckFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- welcome page-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- login Mapping -->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.nhnacademy.nhnmart.servlet.LoginServlet</servlet-class>
        <init-param>
            <param-name>id</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>1234</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>foodsServlet</servlet-name>
        <servlet-class>com.nhnacademy.nhnmart.servlet.FoodsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>foodsServlet</servlet-name>
        <url-pattern>/foods</url-pattern>
    </servlet-mapping>


</web-app>
